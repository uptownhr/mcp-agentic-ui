{
  "name": "@zabaca/pane",
  "version": "0.2.0",
  "description": "Visual interface for AI agents beyond text-only chat",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "pane": "./lib/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build:server": "tsc",
    "build:frontend": "cd ../frontend && bun run build",
    "build:copy": "rm -rf dist && cp -r ../frontend/dist .",
    "build": "bun run build:server && bun run build:frontend && bun run build:copy",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "lib/",
    "dist/"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "ui",
    "state-machine"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zabaca/pane.git"
  },
  "author": "Zabaca",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "xstate": "^5.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/ws": "^8.5.0",
    "typescript": "^5.0.0"
  }
}
